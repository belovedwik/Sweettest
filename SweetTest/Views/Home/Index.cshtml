@model SweetTest.Models.OrderItem
  
@{
    ViewBag.Title = "Form request";
}
<style>
    div.item label { width:100px;}
</style>


@if (User.Identity.IsAuthenticated) { 
<h2>Заказать миньона</h2>

using (Html.BeginForm("AddOrder", "Home",  new { id = "MyId" }, FormMethod.Post)){


<div class="form-group">
    @Html.HiddenFor(m => m.UserName)
    @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @disabled = "disabled" })
        @Html.ValidationMessageFor(m => m.UserName)
    </div>
</div>

 <div class="form-group">
    @Html.HiddenFor(m => m.UserMail)
    @Html.LabelFor(m => m.UserMail, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.UserMail, new { @class = "form-control", @disabled = "disabled" })
        @Html.ValidationMessageFor(m => m.UserMail)
    </div>
</div>

 <div class="form-group">
    @Html.LabelFor(m => m.UserTel, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.UserTel, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.UserTel)
    </div>
</div>

<input type="submit" value="Заказать миньона" />
}

} else {
    <h2>Перед тем как заказать миньона - зарегистрируйтесь</h2>
}